<div class="container" ng-app="BitrateModule" ng-controller="BitrateController" ng-cloak>

<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <span ng-hide="yearChoose">AÃ±o</span>
    <span ng-show="yearChoose">{{yearChoose}}</span> 
